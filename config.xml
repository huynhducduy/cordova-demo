<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloWorld</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="SplashScreenDelay" value="3000"/> <!-- defaults to 3000ms, 0 to disable -->
    <preference name="AutoHideSplashScreen" value="true" /> <!-- defaults to true -->

    <platform name="android">
        <allow-intent href="market:*" />

        <splash src="res/screen/android/hland.png" density="land-hdpi"/>
        <splash src="res/screen/android/lland.png" density="land-ldpi"/>
        <splash src="res/screen/android/mland.png" density="land-mdpi"/>
        <splash src="res/screen/android/xland.png" density="land-xhdpi"/>
        <splash src="res/screen/android/xxland.png" density="land-xxhdpi"/>
        <splash src="res/screen/android/xxxland.png" density="land-xxxhdpi"/>
        <splash src="res/screen/android/hport.png" density="port-hdpi"/>
        <splash src="res/screen/android/lport.png" density="port-ldpi"/>
        <splash src="res/screen/android/mport.png" density="port-mdpi"/>
        <splash src="res/screen/android/xport.png" density="port-xhdpi"/>
        <splash src="res/screen/android/xxport.png" density="port-xxhdpi"/>
        <splash src="res/screen/android/xxxport.png" density="port-xxxhdpi"/>

        <preference name="SplashMaintainAspectRatio" value="true" /> <!-- true = strerched to fit screen-->
        <preference name="SplashScreenSpinnerColor" value="blue" />
        <preference name="SplashShowOnlyFirstTime" value="true" /> <!-- defaults to true, false for "back button close, navigator.app.exitApp()" -->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <preference name="FadeSplashScreen" value="false"/> <!-- defaults to true-->
        <preference name="FadeSplashScreenDuration" value="750"/> <!-- defaults to 500 -->
        <preference name="ShowSplashScreenSpinner" value="false"/> <!-- defaults to true -->
    </platform>
    <platform name="windows">
        <preference name="SplashScreenSpinnerColor" value="DarkRed"/> <!-- defaults to system accent color -->
        <preference name="SplashScreenBackgroundColor" value="0xFFFFFFFF"/> <!-- defaults to #464646 -->
    </platform>
    <platform name="browser">
        <preference name="ShowSplashScreen" value="false" /> <!-- defaults to "true" -->
        <preference name="SplashScreen" value="/images/browser/splashscreen.jpg" /> <!-- defaults to "/img/logo.png" -->
        <preference name="SplashScreenBackgroundColor" value="green" /> <!-- defaults to "#464646" -->
        <preference name="SplashScreenWidth" value="600" /> <!-- defaults to "170" -->
        <preference name="SplashScreenHeight" value="300" /> <!-- defaults to "200" -->
    </platform>

    <preference name="StatusBarOverlaysWebView" value="true" /><!-- defaults to "true" -->
    <preference name="StatusBarBackgroundColor" value="#00ff00" /><!-- defaults to transparent -->
    <preference name="StatusBarStyle" value="lightcontent" /><!-- defaults to lightcontent | blacktranslucent, blackopaque-->
    <preference name="StatusBarDefaultScrollToTop" value="false" /><!-- defaults to "false" -->
</widget>
